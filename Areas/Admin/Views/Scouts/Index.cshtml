@model List<MangoTaikaDistrict.Domain.Entities.Scout>
@{
    ViewData["Title"] = "Gestion des Scouts";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1"><i class="bi bi-person-badge me-2 text-primary"></i>Scouts</h2>
        <p class="text-muted mb-0">Gestion des membres du district</p>
    </div>
    <div>
        <a asp-area="Admin" asp-controller="Scouts" asp-action="Create" class="btn btn-primary btn-modern me-2">
            <i class="bi bi-plus-circle me-1"></i>Nouveau Scout
        </a>
        <a asp-area="Admin" asp-controller="Scouts" asp-action="Import" class="btn btn-success btn-modern">
            <i class="bi bi-file-earmark-excel me-1"></i>Importer Excel
        </a>
    </div>
</div>

<div class="card-modern card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-modern table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th><i class="bi bi-hash me-1"></i>Matricule</th>
                        <th><i class="bi bi-person me-1"></i>Nom</th>
                        <th>Prénoms</th>
                        <th><i class="bi bi-people me-1"></i>Groupe</th>
                        <th><i class="bi bi-info-circle me-1"></i>Statut</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var s in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(s.Matricule))
                                    {
                                        <span class="badge bg-secondary">@s.Matricule</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="fw-semibold">@s.Nom</td>
                                <td>@s.Prenoms</td>
                                <td>
                                    <span class="badge bg-info">@s.Groupe?.Nom</span>
                                </td>
                                <td>
                                    @if (s.Statut == "Actif")
                                    {
                                        <span class="badge bg-success">@s.Statut</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@s.Statut</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-area="Admin" asp-controller="Scouts" asp-action="Details" asp-route-id="@s.Id" 
                                           class="btn btn-sm btn-outline-info" title="Détails">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-area="Admin" asp-controller="Scouts" asp-action="Edit" asp-route-id="@s.Id" 
                                           class="btn btn-sm btn-outline-primary" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-area="Admin" asp-controller="Scouts" asp-action="Delete" asp-route-id="@s.Id" 
                                           class="btn btn-sm btn-outline-danger" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <i class="bi bi-inbox fs-1 text-muted d-block mb-2"></i>
                                <p class="text-muted">Aucun scout enregistré</p>
                                <a asp-area="Admin" asp-controller="Scouts" asp-action="Create" class="btn btn-primary">
                                    <i class="bi bi-plus-circle me-1"></i>Ajouter le premier scout
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
