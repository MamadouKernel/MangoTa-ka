@model List<MangoTaikaDistrict.Domain.Entities.Formation>
@{
    ViewData["Title"] = "Gestion des Formations";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1"><i class="bi bi-book me-2 text-primary"></i>Formations</h2>
        <p class="text-muted mb-0">Gérer les formations du LMS</p>
    </div>
    <div>
        <a asp-area="Admin" asp-controller="Lms" asp-action="Create" class="btn btn-primary btn-modern">
            <i class="bi bi-plus-circle me-1"></i>Nouvelle Formation
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card-modern card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-modern table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Niveau</th>
                        <th>Durée</th>
                        <th>Statut</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var formation in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@formation.Titre</strong><br>
                                    <small class="text-muted">@(formation.Description.Length > 50 ? formation.Description.Substring(0, 50) + "..." : formation.Description)</small>
                                </td>
                                <td><span class="badge bg-info">@formation.Niveau</span></td>
                                <td>@formation.DureeEstimee h</td>
                                <td>
                                    @if (formation.EstActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-area="Admin" asp-controller="Lms" asp-action="Edit" asp-route-id="@formation.Id" 
                                           class="btn btn-sm btn-outline-primary" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-area="Admin" asp-controller="Lms" asp-action="Inscriptions" asp-route-formationId="@formation.Id" 
                                           class="btn btn-sm btn-outline-info" title="Inscriptions">
                                            <i class="bi bi-people"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <i class="bi bi-inbox fs-1 text-muted d-block mb-2"></i>
                                <p class="text-muted">Aucune formation enregistrée</p>
                                <a asp-area="Admin" asp-controller="Lms" asp-action="Create" class="btn btn-primary">
                                    <i class="bi bi-plus-circle me-1"></i>Ajouter la première formation
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
