@model MangoTaikaDistrict.Domain.Entities.DemandeAutorisation
@{
    ViewData["Title"] = "Détails de la Demande";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1"><i class="bi bi-shield-check me-2 text-primary"></i>Détails de la Demande</h2>
        <p class="text-muted mb-0">@Model.Activite?.Titre</p>
    </div>
    <a asp-area="Admin" asp-controller="Authorizations" asp-action="Pending" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Retour
    </a>
</div>

@if (TempData["err"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["err"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Informations de l'activité -->
<div class="card-modern card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Informations de l'Activité</h5>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label fw-semibold text-muted">Titre</label>
                <div class="fs-5 fw-semibold">@Model.Activite?.Titre</div>
            </div>
            <div class="col-md-6">
                <label class="form-label fw-semibold text-muted">Type d'activité</label>
                <div>
                    <span class="badge bg-info">@Model.Activite?.TypeActivite</span>
                </div>
            </div>
            <div class="col-md-6">
                <label class="form-label fw-semibold text-muted">Groupe</label>
                <div>
                    <span class="badge bg-primary">@Model.Activite?.Groupe?.Nom</span>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.Activite?.Lieu))
            {
                <div class="col-md-6">
                    <label class="form-label fw-semibold text-muted">Lieu</label>
                    <div>
                        <i class="bi bi-geo-alt me-1"></i>@Model.Activite.Lieu
                    </div>
                </div>
            }
            <div class="col-md-6">
                <label class="form-label fw-semibold text-muted">Date de début</label>
                <div>
                    <i class="bi bi-calendar-event me-1 text-primary"></i>
                    <strong>@Model.Activite?.DateDebut.ToString("dd/MM/yyyy")</strong>
                    <span class="text-muted">@Model.Activite?.DateDebut.ToString("HH:mm")</span>
                </div>
            </div>
            <div class="col-md-6">
                <label class="form-label fw-semibold text-muted">Date de fin</label>
                <div>
                    <i class="bi bi-calendar-check me-1 text-success"></i>
                    <strong>@Model.Activite?.DateFin.ToString("dd/MM/yyyy")</strong>
                    <span class="text-muted">@Model.Activite?.DateFin.ToString("HH:mm")</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Informations de la demande -->
<div class="card-modern card mb-4">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>Informations de la Demande</h5>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-4">
                <label class="form-label fw-semibold text-muted">Statut</label>
                <div>
                    @switch (Model.Statut)
                    {
                        case MangoTaikaDistrict.Domain.Enums.StatutDemande.BROUILLON:
                            <span class="badge bg-secondary fs-6"><i class="bi bi-file-earmark me-1"></i>Brouillon</span>
                            break;
                        case MangoTaikaDistrict.Domain.Enums.StatutDemande.SOUMISE:
                            <span class="badge bg-info fs-6"><i class="bi bi-send me-1"></i>Soumise</span>
                            break;
                        case MangoTaikaDistrict.Domain.Enums.StatutDemande.EN_ATTENTE:
                            <span class="badge bg-warning fs-6"><i class="bi bi-clock-history me-1"></i>En attente</span>
                            break;
                        case MangoTaikaDistrict.Domain.Enums.StatutDemande.VALIDEE:
                            <span class="badge bg-success fs-6"><i class="bi bi-check-circle me-1"></i>Validée</span>
                            break;
                        case MangoTaikaDistrict.Domain.Enums.StatutDemande.REJETEE:
                            <span class="badge bg-danger fs-6"><i class="bi bi-x-circle me-1"></i>Rejetée</span>
                            break;
                        default:
                            <span class="badge bg-secondary fs-6">@Model.Statut</span>
                            break;
                    }
                </div>
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold text-muted">Étape actuelle</label>
                <div>
                    <span class="badge bg-secondary fs-6">Étape @Model.CurrentStep</span>
                </div>
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold text-muted">Demandeur</label>
                <div>
                    <strong>@Model.Demandeur?.Nom @Model.Demandeur?.Prenoms</strong>
                    @if (!string.IsNullOrEmpty(Model.Demandeur?.Email))
                    {
                        <br><small class="text-muted">@Model.Demandeur.Email</small>
                    }
                </div>
            </div>
            <div class="col-md-6">
                <label class="form-label fw-semibold text-muted">Date de création</label>
                <div>
                    <i class="bi bi-calendar me-1"></i>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Historique des validations -->
<div class="card-modern card mb-4">
    <div class="card-header bg-secondary text-white">
        <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Historique des Validations</h5>
    </div>
    <div class="card-body">
        @if (Model.Validations?.Any() == true)
        {
            <div class="timeline">
                @foreach (var v in Model.Validations.OrderBy(x => x.StepOrder))
                {
                    <div class="d-flex mb-4 pb-3 border-bottom">
                        <div class="flex-shrink-0 me-3">
                            @if (v.Decision == MangoTaikaDistrict.Domain.Enums.DecisionValidation.APPROUVE)
                            {
                                <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                    <i class="bi bi-check-circle fs-4"></i>
                                </div>
                            }
                            else
                            {
                                <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                    <i class="bi bi-x-circle fs-4"></i>
                                </div>
                            }
                        </div>
                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h6 class="mb-1">
                                        <span class="badge bg-secondary">Étape @v.StepOrder</span>
                                        @if (v.Decision == MangoTaikaDistrict.Domain.Enums.DecisionValidation.APPROUVE)
                                        {
                                            <span class="badge bg-success ms-2"><i class="bi bi-check-circle me-1"></i>Approuvée</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger ms-2"><i class="bi bi-x-circle me-1"></i>Rejetée</span>
                                        }
                                    </h6>
                                    <p class="mb-1">
                                        <i class="bi bi-person me-1"></i><strong>@v.Valideur?.Nom @v.Valideur?.Prenoms</strong>
                                    </p>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar me-1"></i>@v.DecidedAt.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(v.Commentaire))
                            {
                                <div class="alert alert-light mt-2 mb-0">
                                    <i class="bi bi-chat-left-text me-2"></i>@v.Commentaire
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="bi bi-inbox fs-1 text-muted d-block mb-2"></i>
                <p class="text-muted">Aucune validation enregistrée</p>
            </div>
        }
    </div>
</div>

<!-- Formulaire de décision -->
@if (Model.Statut == MangoTaikaDistrict.Domain.Enums.StatutDemande.EN_ATTENTE)
{
    <div class="card-modern card">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="bi bi-clipboard-check me-2"></i>Prendre une Décision</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-area="Admin" asp-controller="Authorizations" asp-action="Decide" class="form-modern">
                <input type="hidden" name="id" value="@Model.Id" />
                
                <div class="mb-3">
                    <label for="commentaire" class="form-label fw-semibold">
                        <i class="bi bi-chat-left-text me-1"></i>Commentaire
                    </label>
                    <textarea name="commentaire" id="commentaire" class="form-control" rows="4" 
                              placeholder="Ajoutez un commentaire pour expliquer votre décision..."></textarea>
                </div>
                
                <div class="d-flex gap-2">
                    <button type="submit" name="decision" value="approve" class="btn btn-success btn-modern">
                        <i class="bi bi-check-circle me-1"></i>Approuver
                    </button>
                    <button type="submit" name="decision" value="reject" class="btn btn-danger btn-modern">
                        <i class="bi bi-x-circle me-1"></i>Rejeter
                    </button>
                    <a asp-area="Admin" asp-controller="Authorizations" asp-action="Pending" class="btn btn-outline-secondary btn-modern">
                        <i class="bi bi-arrow-left me-1"></i>Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
}
