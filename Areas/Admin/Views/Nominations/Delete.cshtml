@model MangoTaikaDistrict.Domain.Entities.Nomination
@{
    ViewData["Title"] = "Supprimer une Nomination";
}

<div class="mb-4">
    <h2 class="fw-bold mb-1 text-danger"><i class="bi bi-exclamation-triangle me-2"></i>Supprimer une Nomination</h2>
    <p class="text-muted">Confirmer la suppression</p>
</div>

<div class="card-modern card border-danger">
    <div class="card-body">
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i><strong>Attention !</strong> Cette action est irréversible.
        </div>
        
        <div class="mb-4">
            <p class="mb-2">Êtes-vous sûr de vouloir supprimer la nomination suivante ?</p>
            <div class="p-3 bg-light rounded">
                <div>
                    <h5 class="mb-2"><i class="bi bi-person me-2 text-primary"></i>@Model.Scout?.Nom @Model.Scout?.Prenoms</h5>
                    <div class="row g-2">
                        <div class="col-md-6">
                            <small class="text-muted d-block">Poste</small>
                            <span class="badge bg-primary">@Model.Poste</span>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted d-block">Groupe</small>
                            <span class="badge bg-info">@Model.Groupe?.Nom</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <form method="post" asp-action="Delete">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger btn-modern">
                    <i class="bi bi-trash me-1"></i>Oui, supprimer
                </button>
                <a asp-area="Admin" asp-controller="Nominations" asp-action="Index" class="btn btn-outline-secondary btn-modern">
                    <i class="bi bi-x-circle me-1"></i>Annuler
                </a>
            </div>
        </form>
    </div>
</div>
