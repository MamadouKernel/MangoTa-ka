<!-- Actualités Récentes -->
@if (recentNews.Any())
{
    <section class="container mb-5">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3"><i class="bi bi-newspaper me-2 text-primary"></i>Actualités Récentes</h2>
            <p class="lead text-muted">Restez informé des dernières nouvelles du district</p>
        </div>
        <div class="row g-4">
            @foreach (var news in recentNews)
            {
                <div class="col-md-4">
                    <div class="card-modern-glass card-scout h-100 animate-fade-in">
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(news.Titre))
                            {
                                <h5 class="fw-bold mb-3">@news.Titre</h5>
                            }
                            @if (!string.IsNullOrEmpty(news.Contenu))
                            {
                                <p class="text-muted mb-3">@(news.Contenu.Length > 150 ? news.Contenu.Substring(0, 150) + "..." : news.Contenu)</p>
                            }
                            <div class="d-flex justify-content-between align-items-center">
                                @if (news.PublishedAt.HasValue)
                                {
                                    <small class="text-muted"><i class="bi bi-calendar me-1"></i>@news.PublishedAt.Value.ToString("dd/MM/yyyy")</small>
                                }
                                <a asp-controller="News" asp-action="Details" asp-route-id="@news.Id" class="btn btn-sm btn-primary">
                                    Lire plus <i class="bi bi-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a asp-controller="News" asp-action="Index" class="btn btn-primary btn-lg modern-btn">
                <i class="bi bi-newspaper me-2"></i>Voir toutes les actualités
            </a>
        </div>
    </section>
}

<!-- Formations en Vedette -->
@if (recentFormations.Any())
{
    <section class="container mb-5">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3"><i class="bi bi-book-half me-2 text-primary"></i>Formations Disponibles</h2>
            <p class="lead text-muted">Développez vos compétences avec nos formations en ligne</p>
        </div>
        <div class="row g-4">
            @foreach (var formation in recentFormations)
            {
                <div class="col-md-4">
                    <div class="card-modern-glass card-scout h-100 animate-fade-in">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-wrapper bg-info-gradient me-3" style="width: 60px; height: 60px; border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-book text-white" style="font-size: 1.5rem;"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold mb-0">@formation.Titre</h5>
                                    <small class="text-muted">@formation.Niveau</small>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(formation.Description))
                            {
                                <p class="text-muted mb-3">@(formation.Description.Length > 120 ? formation.Description.Substring(0, 120) + "..." : formation.Description)</p>
                            }
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                @if (formation.EstActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>Disponible
                                    </span>
                                }
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <a asp-controller="Formations" asp-action="Details" asp-route-id="@formation.Id" class="btn btn-sm btn-primary">
                                        Découvrir <i class="bi bi-arrow-right ms-1"></i>
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-outline-primary">
                                        Connectez-vous <i class="bi bi-arrow-right ms-1"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <div class="text-center mt-4">
                <a asp-controller="Formations" asp-action="Index" class="btn btn-primary btn-lg modern-btn">
                    <i class="bi bi-book-half me-2"></i>Voir toutes les formations
                </a>
            </div>
        }
    </section>
}

<!-- Galerie Récente -->
@if (recentAlbums.Any())
{
    <section class="container mb-5">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3"><i class="bi bi-images me-2 text-primary"></i>Galerie Photos</h2>
            <p class="lead text-muted">Découvrez nos moments forts en images</p>
        </div>
        <div class="row g-4">
            @foreach (var album in recentAlbums)
            {
                <div class="col-md-4">
                    <div class="card-modern-glass card-scout h-100 animate-fade-in overflow-hidden">
                        @if (album.Medias?.Any() == true)
                        {
                            var firstMedia = album.Medias.First();
                            <img src="@firstMedia.FilePath" alt="@album.Titre" class="card-img-top" style="height: 200px; object-fit: cover;" />
                        }
                        <div class="card-body">
                            <h5 class="fw-bold mb-2">@album.Titre</h5>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-images me-1"></i>@(album.Medias?.Count ?? 0) photo(s)
                                </small>
                                <a asp-controller="Gallery" asp-action="Details" asp-route-id="@album.Id" class="btn btn-sm btn-primary">
                                    Voir <i class="bi bi-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a asp-controller="Gallery" asp-action="Index" class="btn btn-primary btn-lg modern-btn">
                <i class="bi bi-images me-2"></i>Voir toute la galerie
            </a>
        </div>
    </section>
}

<!-- Témoignages (Livre d'Or) -->
@if (recentMessages.Any())
{
    <section class="container mb-5">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3"><i class="bi bi-chat-heart me-2 text-primary"></i>Témoignages</h2>
            <p class="lead text-muted">Ce que nos membres disent de nous</p>
        </div>
        <div class="row g-4">
            @foreach (var message in recentMessages)
            {
                <div class="col-md-4">
                    <div class="card-modern-glass card-scout h-100 animate-fade-in">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-wrapper bg-warning-gradient me-3" style="width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-person-fill text-white"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-0">@(message.Auteur ?? "Anonyme")</h6>
                                    <small class="text-muted">@message.CreatedAt.ToString("dd/MM/yyyy")</small>
                                </div>
                            </div>
                            <p class="mb-0">@message.Message</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a asp-controller="Guestbook" asp-action="Index" class="btn btn-primary btn-lg modern-btn">
                <i class="bi bi-chat-heart me-2"></i>Voir le livre d'or
            </a>
        </div>
    </section>
}

