@model MangoTaikaDistrict.Models.Auth.MfaVerifyVm
@{
    ViewData["Title"] = "Vérification MFA";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-5 col-lg-4">
            <div class="card-modern card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-shield-lock-fill text-primary" style="font-size: 3rem;"></i>
                        <h2 class="fw-bold mt-3 mb-1">Vérification MFA</h2>
                        <p class="text-muted">Entrez le code à 6 chiffres de votre application d'authentification</p>
                    </div>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Code" class="form-label fw-semibold">
                                <i class="bi bi-key me-1"></i>Code de vérification *
                            </label>
                            <input asp-for="Code" class="form-control form-modern text-center" 
                                   placeholder="000000" maxlength="6" pattern="[0-9]{6}" 
                                   style="font-size: 1.5rem; letter-spacing: 0.5rem;" autofocus />
                            <span asp-validation-for="Code" class="text-danger"></span>
                            <small class="text-muted d-block mt-2">
                                <i class="bi bi-info-circle me-1"></i>Ouvrez votre application d'authentification et entrez le code à 6 chiffres
                            </small>
                        </div>

                        <button type="submit" class="btn btn-primary btn-modern w-100 py-2 mb-3">
                            <i class="bi bi-check-circle me-2"></i>Vérifier
                        </button>

                        <div class="text-center">
                            <small class="text-muted">
                                <a asp-action="Login">Retour à la connexion</a>
                            </small>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Auto-formatage du code MFA
        document.querySelector('input[name="Code"]').addEventListener('input', function(e) {
            this.value = this.value.replace(/\D/g, '').substring(0, 6);
        });
    </script>
}
