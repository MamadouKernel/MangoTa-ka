@model MangoTaikaDistrict.Models.Auth.LoginVm
@{
    ViewData["Title"] = "Connexion";
    Layout = null; // Pas de layout pour une page de login dédiée
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MANGO TAÏKA</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --color-primary: #2D5016;
            --color-primary-medium: #4A7C2A;
            --color-primary-light: #6B9F3D;
            --color-primary-lighter: #8BC34A;
            --color-primary-soft: #E8F5E1;
            --color-accent: #FDC626;
            --color-accent-light: #FFD56E;
            --color-accent-soft: #FFF5DC;
            --color-blue: #2864AE;
            --color-blue-light: #5FA3D9;
            --color-blue-soft: #CBE1F6;
            --color-text-dark: #000000;
            --color-text-light: #DADADA;
            --color-white: #FFFFFF;
            --radius-sm: 8px;
            --radius-md: 12px;
            --radius-lg: 16px;
            --transition-normal: 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', 'Myriad Pro', sans-serif;
            background: linear-gradient(135deg, var(--color-primary-soft) 0%, var(--color-white) 50%, var(--color-primary-soft) 100%);
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        /* Pattern naturel en arrière-plan */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                radial-gradient(circle at 20% 50%, rgba(45, 80, 22, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(139, 195, 74, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 20%, rgba(45, 80, 22, 0.05) 0%, transparent 50%);
            z-index: 0;
            pointer-events: none;
        }
        
        /* Filigrane du logo sur la page de login */
        body::after {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: url('/images/logo.png');
            background-position: center center;
            background-repeat: no-repeat;
            background-size: 600px 600px;
            opacity: 0.03;
            z-index: 0;
            pointer-events: none;
            filter: grayscale(100%) brightness(0.5);
        }
        
        @@media (max-width: 768px) {
            body::after {
                background-size: 400px 400px;
                opacity: 0.02;
            }
        }

        /* Feuilles flottantes */
        .leaf-decoration {
            position: absolute;
            width: 60px;
            height: 60px;
            background: rgba(45, 80, 22, 0.1);
            border-radius: 0 100% 0 100%;
            animation: leaf-float 20s infinite ease-in-out;
            z-index: 1;
        }

        .leaf-decoration:nth-child(1) {
            top: 10%;
            left: 10%;
            animation-delay: 0s;
        }

        .leaf-decoration:nth-child(2) {
            top: 60%;
            right: 15%;
            animation-delay: 5s;
        }

        .leaf-decoration:nth-child(3) {
            bottom: 20%;
            left: 20%;
            animation-delay: 10s;
        }

        @@keyframes leaf-float {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            25% { transform: translate(20px, -30px) rotate(5deg); }
            50% { transform: translate(-15px, -50px) rotate(-5deg); }
            75% { transform: translate(30px, -20px) rotate(3deg); }
        }

        .login-container {
            position: relative;
            z-index: 2;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: var(--radius-lg);
            box-shadow: 
                0 8px 32px rgba(45, 80, 22, 0.1),
                0 2px 8px rgba(45, 80, 22, 0.05),
                inset 0 1px 0 rgba(255, 255, 255, 0.8);
            border: 1px solid rgba(212, 228, 200, 0.3);
            padding: 3rem;
            width: 100%;
            max-width: 450px;
            position: relative;
            overflow: hidden;
        }

        .login-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--color-primary) 0%, var(--color-primary-light) 50%, var(--color-primary) 100%);
        }

        .logo-container {
            text-align: center;
            margin-bottom: 2rem;
        }

        .logo-login {
            height: 150px;
            max-width: 100%;
            object-fit: contain;
            margin-bottom: 1rem;
            border: 4px solid var(--color-primary-medium);
            border-radius: var(--radius-md);
            padding: 0.5rem;
            background: var(--color-white);
            box-shadow: 
                inset 0 0 20px rgba(45, 80, 22, 0.2),
                0 8px 24px rgba(45, 80, 22, 0.3);
            animation: logo-glow 3s ease-in-out infinite;
        }

        @@keyframes logo-glow {
            0%, 100% { 
                box-shadow: 
                    inset 0 0 20px rgba(45, 80, 22, 0.2),
                    0 8px 24px rgba(45, 80, 22, 0.3);
            }
            50% { 
                box-shadow: 
                    inset 0 0 30px rgba(45, 80, 22, 0.3),
                    0 12px 32px rgba(45, 80, 22, 0.4);
            }
        }

        .login-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--color-primary);
            margin-bottom: 0.5rem;
        }

        .login-subtitle {
            color: var(--color-text-dark);
            font-size: 0.95rem;
            opacity: 0.7;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: var(--color-primary);
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .form-label i {
            color: var(--color-primary-medium);
        }

        .form-control {
            border: 2px solid rgba(45, 80, 22, 0.2);
            border-radius: var(--radius-md);
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all var(--transition-normal);
            background: var(--color-white);
        }

        .form-control:focus {
            border-color: var(--color-primary);
            box-shadow: 0 0 0 3px rgba(45, 80, 22, 0.1);
            outline: none;
        }

        .form-control::placeholder {
            color: var(--color-text-light);
            opacity: 0.6;
        }

        .btn-login {
            width: 100%;
            padding: 0.875rem;
            background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-medium) 100%);
            color: var(--color-white);
            border: none;
            border-radius: var(--radius-md);
            font-weight: 600;
            font-size: 1rem;
            transition: all var(--transition-normal);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            margin-top: 1.5rem;
            box-shadow: 0 4px 12px rgba(45, 80, 22, 0.3);
        }

        .btn-login:hover {
            background: linear-gradient(135deg, var(--color-primary-medium) 0%, var(--color-primary-light) 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(45, 80, 22, 0.4);
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .alert-danger {
            background: rgba(220, 53, 69, 0.1);
            border: 1px solid rgba(220, 53, 69, 0.3);
            border-radius: var(--radius-md);
            color: #dc3545;
            padding: 0.75rem 1rem;
            margin-bottom: 1.5rem;
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .login-footer {
            text-align: center;
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid rgba(45, 80, 22, 0.1);
        }

        .login-footer small {
            color: var(--color-text-dark);
            opacity: 0.7;
            display: block;
            margin-bottom: 0.5rem;
        }

        .login-footer a {
            color: var(--color-primary);
            text-decoration: none;
            font-weight: 600;
            transition: color var(--transition-normal);
        }

        .login-footer a:hover {
            color: var(--color-primary-light);
            text-decoration: underline;
        }

        .security-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--color-primary-medium);
            font-size: 0.85rem;
            margin-top: 1rem;
        }

        .security-badge i {
            color: var(--color-primary);
        }

        /* Responsive */
        @@media (max-width: 576px) {
            .login-card {
                padding: 2rem 1.5rem;
            }

            .logo-login {
                height: 120px;
            }

            .login-title {
                font-size: 1.5rem;
            }
        }

        /* Animation d'entrée */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-card {
            animation: fadeInUp 0.6s ease-out;
        }
    </style>
</head>
<body>
    <!-- Feuilles décoratives -->
    <div class="leaf-decoration"></div>
    <div class="leaf-decoration"></div>
    <div class="leaf-decoration"></div>

    <div class="login-container">
        <div class="login-card">
            <!-- Logo et titre -->
            <div class="logo-container">
                <img src="~/images/logo.png" alt="MANGO TAÏKA" class="logo-login" 
                     onerror="this.style.display='none'; this.nextElementSibling.style.display='block';" />
                <div style="display: none; font-size: 3rem; color: var(--color-primary);">
                    <i class="bi bi-tree-fill"></i>
                </div>
                <h1 class="login-title">MANGO TAÏKA</h1>
                <p class="login-subtitle">Plateforme de gestion du district scout</p>
            </div>

            <!-- Formulaire de connexion -->
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group">
                    <label asp-for="Telephone" class="form-label">
                        <i class="bi bi-telephone-fill"></i>
                        <span>Téléphone</span>
                    </label>
                    <input asp-for="Telephone" 
                           class="form-control" 
                           placeholder="Ex: 0100000000" 
                           autofocus 
                           autocomplete="tel" />
                    <span asp-validation-for="Telephone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">
                        <i class="bi bi-lock-fill"></i>
                        <span>Mot de passe</span>
                    </label>
                    <input asp-for="Password" 
                           type="password" 
                           class="form-control" 
                           placeholder="Votre mot de passe" 
                           autocomplete="current-password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-login">
                    <i class="bi bi-box-arrow-in-right"></i>
                    <span>Se connecter</span>
                </button>
            </form>

            <!-- Footer -->
            <div class="login-footer">
                <div class="security-badge">
                    <i class="bi bi-shield-check-fill"></i>
                    <span>Connexion sécurisée</span>
                </div>
                <small>
                    Pas encore inscrit ? <a asp-action="Register">S'inscrire</a>
                </small>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Validation scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
