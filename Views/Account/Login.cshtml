@model MangoTaikaDistrict.Models.Auth.LoginVm
@{
    ViewData["Title"] = "Connexion";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-5 col-lg-4">
            <div class="card-modern card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-tree-fill text-primary" style="font-size: 3rem;"></i>
                        <h2 class="fw-bold mt-3 mb-1">MangoTaikaDistrict</h2>
                        <p class="text-muted">Plateforme de gestion</p>
                    </div>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Telephone" class="form-label fw-semibold">
                                <i class="bi bi-telephone me-1"></i>Téléphone
                            </label>
                            <input asp-for="Telephone" class="form-control form-modern" placeholder="Ex: 0100000000" autofocus />
                            <span asp-validation-for="Telephone" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label fw-semibold">
                                <i class="bi bi-lock me-1"></i>Mot de passe
                            </label>
                            <input asp-for="Password" type="password" class="form-control form-modern" placeholder="Votre mot de passe" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-modern w-100 py-2 mb-3">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Se connecter
                        </button>
                    </form>

                    <div class="text-center mt-4">
                        <small class="text-muted">
                            <i class="bi bi-shield-check me-1"></i>Connexion sécurisée
                        </small>
                        <div class="mt-2">
                            <small class="text-muted">
                                Pas encore inscrit ? <a asp-action="Register">S'inscrire</a>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
