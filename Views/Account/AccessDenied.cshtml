@{
    ViewData["Title"] = "Accès Refusé";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-6 col-lg-5">
            <div class="card-modern card shadow-lg border-0 text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-shield-x text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="fw-bold mb-3">Accès Refusé</h2>
                    <p class="text-muted mb-4">
                        Vous n'avez pas les permissions nécessaires pour accéder à cette ressource.
                    </p>
                    <div class="d-grid gap-2">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary btn-modern">
                            <i class="bi bi-house me-1"></i>Retour à l'accueil
                        </a>
                        <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary btn-modern">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Se connecter avec un autre compte
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
