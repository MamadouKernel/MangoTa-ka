@{
    ViewData["Title"] = "Mes données";
    Layout = "_Layout";
    var user = ViewBag.User as MangoTaikaDistrict.Domain.Entities.Utilisateur;
    var scout = ViewBag.Scout as MangoTaikaDistrict.Domain.Entities.Scout;
    var scouts = ViewBag.Scouts as List<MangoTaikaDistrict.Domain.Entities.Scout> ?? new();
    var competences = ViewBag.Competences as List<MangoTaikaDistrict.Domain.Entities.ScoutCompetence> ?? new();
    var demandes = ViewBag.Demandes as List<MangoTaikaDistrict.Domain.Entities.DemandeDroitRgpd> ?? new();
}

<div class="container mb-5">
    <h2 class="fw-bold mb-4"><i class="bi bi-person-badge me-2 text-primary"></i>Mes données personnelles</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Données utilisateur -->
    <div class="card-modern card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-person me-2"></i>Informations du compte</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Nom :</strong> @user?.Nom</p>
                    <p><strong>Prénoms :</strong> @user?.Prenoms</p>
                    <p><strong>Téléphone :</strong> @user?.Telephone</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Email :</strong> @(user?.Email ?? "-")</p>
                    <p><strong>Date d'inscription :</strong> @user?.CreatedAt.ToString("dd/MM/yyyy")</p>
                    <p><strong>Compte validé :</strong> 
                        @if (user?.IsValidated == true)
                        {
                            <span class="badge bg-success">Oui</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">En attente</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Données scout (si l'utilisateur est un scout) -->
    @if (scout != null)
    {
        <div class="card-modern card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-tree me-2"></i>Informations scoutes</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Matricule :</strong> @(scout.Matricule ?? "-")</p>
                        <p><strong>Groupe :</strong> @scout.Groupe.Nom</p>
                        <p><strong>Branche :</strong> @(scout.Unite?.Branche ?? "-")</p>
                        <p><strong>Date de naissance :</strong> @(scout.DateNaissance?.ToString("dd/MM/yyyy") ?? "-")</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Lieu de naissance :</strong> @(scout.LieuNaissance ?? "-")</p>
                        <p><strong>Adresse :</strong> @(scout.Adresse ?? "-")</p>
                        <p><strong>Statut :</strong> <span class="badge bg-info">@scout.Statut</span></p>
                    </div>
                </div>

                @if (competences.Any())
                {
                    <hr class="my-3">
                    <h6 class="fw-semibold mb-3">Compétences</h6>
                    <div class="row">
                        @foreach (var comp in competences)
                        {
                            <div class="col-md-4 mb-2">
                                <div class="badge bg-secondary me-1">@comp.Competence.Libelle</div>
                                @if (!string.IsNullOrEmpty(comp.Niveau))
                                {
                                    <small class="text-muted">(@comp.Niveau)</small>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }

    <!-- Demandes RGPD -->
    <div class="card-modern card mb-4">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-shield-check me-2"></i>Mes demandes RGPD</h5>
        </div>
        <div class="card-body">
            @if (demandes.Any())
            {
                <div class="table-responsive">
                    <table class="table table-modern">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Date</th>
                                <th>Statut</th>
                                <th>Réponse</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var demande in demandes)
                            {
                                <tr>
                                    <td>@demande.Type</td>
                                    <td>@demande.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (demande.Statut == MangoTaikaDistrict.Domain.Enums.StatutDemandeRgpd.TRAITEE)
                                        {
                                            <span class="badge bg-success">Traitée</span>
                                        }
                                        else if (demande.Statut == MangoTaikaDistrict.Domain.Enums.StatutDemandeRgpd.REJETEE)
                                        {
                                            <span class="badge bg-danger">Rejetée</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">En attente</span>
                                        }
                                    </td>
                                    <td>@(demande.Reponse ?? "-")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">Aucune demande enregistrée.</p>
            }
        </div>
    </div>

    <!-- Actions RGPD -->
    <div class="card-modern card">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Exercer mes droits</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <h6><i class="bi bi-eye me-2"></i>Droit d'accès</h6>
                    <p class="text-muted small">Consulter toutes mes données personnelles</p>
                    <form method="post" asp-action="RequestAccess">
                        <button type="submit" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-download me-1"></i>Demander un export
                        </button>
                    </form>
                </div>
                <div class="col-md-6">
                    <h6><i class="bi bi-pencil me-2"></i>Droit de rectification</h6>
                    <p class="text-muted small">Corriger des informations erronées</p>
                    <button type="button" class="btn btn-outline-warning btn-sm" data-bs-toggle="modal" data-bs-target="#rectificationModal">
                        <i class="bi bi-pencil me-1"></i>Demander une correction
                    </button>
                </div>
                <div class="col-md-6">
                    <h6><i class="bi bi-x-circle me-2"></i>Droit d'opposition</h6>
                    <p class="text-muted small">Refuser le traitement de mes données</p>
                    <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#oppositionModal">
                        <i class="bi bi-x-circle me-1"></i>Faire opposition
                    </button>
                </div>
                <div class="col-md-6">
                    <h6><i class="bi bi-trash me-2"></i>Droit à l'oubli</h6>
                    <p class="text-muted small">Demander la suppression de mes données</p>
                    <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#suppressionModal">
                        <i class="bi bi-trash me-1"></i>Demander la suppression
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Rectification -->
<div class="modal fade" id="rectificationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Demande de rectification</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="RequestRectification">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Champ à corriger</label>
                        <input type="text" name="field" class="form-control" required placeholder="Ex: Email, Téléphone" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Nouvelle valeur</label>
                        <input type="text" name="newValue" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description (optionnel)</label>
                        <textarea name="description" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Envoyer la demande</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Opposition -->
<div class="modal fade" id="oppositionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Demande d'opposition</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="RequestOpposition">
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        En faisant opposition, vous refusez le traitement de vos données personnelles. Cela peut affecter votre accès à certains services.
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Raison (optionnel)</label>
                        <textarea name="reason" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-danger">Confirmer l'opposition</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Suppression -->
<div class="modal fade" id="suppressionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Demande de suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="RequestDeletion">
                <div class="modal-body">
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Attention !</strong> La suppression de vos données est irréversible. Vous perdrez l'accès à votre compte et à tous les services associés.
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Raison (optionnel)</label>
                        <textarea name="reason" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
                </div>
            </form>
        </div>
    </div>
</div>
