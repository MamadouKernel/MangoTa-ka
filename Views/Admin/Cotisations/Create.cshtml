@model MangoTaikaDistrict.Domain.Entities.Cotisation
@{
    ViewData["Title"] = "Créer une Cotisation";
    var scouts = ViewBag.Scouts as List<MangoTaikaDistrict.Domain.Entities.Scout> ?? new();
    var groupes = ViewBag.Groupes as List<MangoTaikaDistrict.Domain.Entities.Groupe> ?? new();
    var statuts = ViewBag.Statuts as MangoTaikaDistrict.Domain.Enums.StatutCotisation[] ?? Array.Empty<MangoTaikaDistrict.Domain.Enums.StatutCotisation>();
}

<div class="mb-4">
    <h2 class="fw-bold mb-1"><i class="bi bi-cash-coin me-2 text-success"></i>Créer une Cotisation</h2>
    <p class="text-muted">Enregistrer un nouveau paiement</p>
</div>

<div class="card-modern card">
    <div class="card-body">
        <form method="post" class="form-modern">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="ScoutId" class="form-label fw-semibold">
                        <i class="bi bi-person me-1"></i>Scout *
                    </label>
                    <select asp-for="ScoutId" class="form-select" required>
                        <option value="">-- Sélectionner --</option>
                        @foreach (var s in scouts)
                        {
                            <option value="@s.Id">@s.Nom @s.Prenoms (@s.Groupe?.Nom)</option>
                        }
                    </select>
                    <span asp-validation-for="ScoutId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="GroupeId" class="form-label fw-semibold">
                        <i class="bi bi-people me-1"></i>Groupe *
                    </label>
                    <select asp-for="GroupeId" class="form-select" required>
                        <option value="">-- Sélectionner --</option>
                        @foreach (var g in groupes)
                        {
                            <option value="@g.Id">@g.Nom</option>
                        }
                    </select>
                    <span asp-validation-for="GroupeId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Periode" class="form-label fw-semibold">
                        <i class="bi bi-calendar me-1"></i>Période *
                    </label>
                    <input asp-for="Periode" class="form-control" placeholder="Ex: 2026 ou 2026-01" required />
                    <small class="text-muted">Format: Année (2026) ou Année-Mois (2026-01)</small>
                    <span asp-validation-for="Periode" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Statut" class="form-label fw-semibold">
                        <i class="bi bi-info-circle me-1"></i>Statut
                    </label>
                    <select asp-for="Statut" class="form-select">
                        @foreach (var statut in statuts)
                        {
                            <option value="@statut">@statut</option>
                        }
                    </select>
                </div>

                <div class="col-md-6">
                    <label asp-for="MontantAttendu" class="form-label fw-semibold">
                        <i class="bi bi-currency-exchange me-1"></i>Montant Attendu (FCFA) *
                    </label>
                    <input asp-for="MontantAttendu" type="number" step="0.01" min="0" class="form-control" required />
                    <span asp-validation-for="MontantAttendu" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MontantPaye" class="form-label fw-semibold">
                        <i class="bi bi-cash me-1"></i>Montant Payé (FCFA)
                    </label>
                    <input asp-for="MontantPaye" type="number" step="0.01" min="0" class="form-control" value="0" />
                    <small class="text-muted">Le statut sera calculé automatiquement</small>
                    <span asp-validation-for="MontantPaye" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="DatePaiement" class="form-label fw-semibold">
                        <i class="bi bi-calendar-check me-1"></i>Date Paiement
                    </label>
                    <input asp-for="DatePaiement" type="date" class="form-control" />
                    <span asp-validation-for="DatePaiement" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Observations" class="form-label fw-semibold">
                        <i class="bi bi-chat-left-text me-1"></i>Observations
                    </label>
                    <textarea asp-for="Observations" rows="3" class="form-control" placeholder="Notes ou commentaires..."></textarea>
                    <span asp-validation-for="Observations" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-modern">
                    <i class="bi bi-check-circle me-1"></i>Enregistrer
                </button>
                <a asp-area="Admin" asp-controller="Cotisations" asp-action="Index" class="btn btn-outline-secondary btn-modern">
                    <i class="bi bi-arrow-left me-1"></i>Retour
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
