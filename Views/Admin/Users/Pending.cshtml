@model List<MangoTaikaDistrict.Domain.Entities.Utilisateur>
@{
    ViewData["Title"] = "Utilisateurs en attente de validation";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1"><i class="bi bi-person-check me-2 text-warning"></i>Utilisateurs en attente</h2>
        <p class="text-muted mb-0">Validez ou rejetez les nouvelles inscriptions</p>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Any())
{
    <div class="card-modern card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-modern table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Nom & Prénoms</th>
                            <th>Téléphone</th>
                            <th>Email</th>
                            <th>Rôles</th>
                            <th>Date d'inscription</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@user.Nom @user.Prenoms</strong>
                                </td>
                                <td>@user.Telephone</td>
                                <td>@(user.Email ?? "-")</td>
                                <td>
                                    @foreach (var role in user.UtilisateurRoles)
                                    {
                                        <span class="badge bg-secondary me-1">@role.Role.Libelle</span>
                                    }
                                </td>
                                <td>@user.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-end">
                                    <form method="post" asp-action="Validate" class="d-inline">
                                        <input type="hidden" name="id" value="@user.Id" />
                                        <button type="submit" class="btn btn-sm btn-success btn-modern">
                                            <i class="bi bi-check-circle me-1"></i>Valider
                                        </button>
                                    </form>
                                    <form method="post" asp-action="Reject" class="d-inline">
                                        <input type="hidden" name="id" value="@user.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger btn-modern" 
                                                onclick="return confirm('Êtes-vous sûr de vouloir rejeter cette inscription ?');">
                                            <i class="bi bi-x-circle me-1"></i>Rejeter
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>Aucun utilisateur en attente de validation.
    </div>
}
