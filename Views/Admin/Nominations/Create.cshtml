@model MangoTaikaDistrict.Domain.Entities.Nomination
@{
    ViewData["Title"] = "Créer une Nomination";
    var scouts = ViewBag.Scouts as List<MangoTaikaDistrict.Domain.Entities.Scout> ?? new();
    var groupes = ViewBag.Groupes as List<MangoTaikaDistrict.Domain.Entities.Groupe> ?? new();
    var statuts = ViewBag.Statuts as MangoTaikaDistrict.Domain.Enums.StatutNomination[] ?? Array.Empty<MangoTaikaDistrict.Domain.Enums.StatutNomination>();
    var utilisateurs = ViewBag.Utilisateurs as List<MangoTaikaDistrict.Domain.Entities.Utilisateur> ?? new();
}

<div class="mb-4">
    <h2 class="fw-bold mb-1"><i class="bi bi-award me-2 text-warning"></i>Créer une Nomination</h2>
    <p class="text-muted">Attribuer un poste ou une fonction à un scout</p>
</div>

<div class="card-modern card">
    <div class="card-body">
        <form method="post" class="form-modern">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="ScoutId" class="form-label fw-semibold">
                        <i class="bi bi-person me-1"></i>Scout *
                    </label>
                    <select asp-for="ScoutId" class="form-select" required>
                        <option value="">-- Sélectionner --</option>
                        @foreach (var s in scouts)
                        {
                            <option value="@s.Id">@s.Nom @s.Prenoms (@s.Groupe?.Nom)</option>
                        }
                    </select>
                    <span asp-validation-for="ScoutId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="GroupeId" class="form-label fw-semibold">
                        <i class="bi bi-people me-1"></i>Groupe *
                    </label>
                    <select asp-for="GroupeId" class="form-select" required>
                        <option value="">-- Sélectionner --</option>
                        @foreach (var g in groupes)
                        {
                            <option value="@g.Id">@g.Nom</option>
                        }
                    </select>
                    <span asp-validation-for="GroupeId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Poste" class="form-label fw-semibold">
                        <i class="bi bi-briefcase me-1"></i>Poste *
                    </label>
                    <input asp-for="Poste" class="form-control" placeholder="Ex: Chef de groupe, Responsable..." required />
                    <span asp-validation-for="Poste" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Fonction" class="form-label fw-semibold">
                        <i class="bi bi-file-text me-1"></i>Fonction
                    </label>
                    <input asp-for="Fonction" class="form-control" placeholder="Description de la fonction" />
                    <span asp-validation-for="Fonction" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="DateDebut" class="form-label fw-semibold">
                        <i class="bi bi-calendar-event me-1"></i>Date Début *
                    </label>
                    <input asp-for="DateDebut" type="date" class="form-control" required />
                    <span asp-validation-for="DateDebut" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="DateFin" class="form-label fw-semibold">
                        <i class="bi bi-calendar-check me-1"></i>Date Fin
                    </label>
                    <input asp-for="DateFin" type="date" class="form-control" />
                    <small class="text-muted">Optionnel - laisser vide si indéterminée</small>
                    <span asp-validation-for="DateFin" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Statut" class="form-label fw-semibold">
                        <i class="bi bi-info-circle me-1"></i>Statut
                    </label>
                    <select asp-for="Statut" class="form-select">
                        @foreach (var statut in statuts)
                        {
                            <option value="@statut">@statut</option>
                        }
                    </select>
                </div>

                <div class="col-md-6">
                    <label asp-for="AutoriteValidationId" class="form-label fw-semibold">
                        <i class="bi bi-shield-check me-1"></i>Autorité de Validation
                    </label>
                    <select asp-for="AutoriteValidationId" class="form-select">
                        <option value="">-- Aucune --</option>
                        @foreach (var u in utilisateurs)
                        {
                            <option value="@u.Id">@u.Nom @u.Prenoms</option>
                        }
                    </select>
                </div>

                <div class="col-12">
                    <label asp-for="Observations" class="form-label fw-semibold">
                        <i class="bi bi-chat-left-text me-1"></i>Observations
                    </label>
                    <textarea asp-for="Observations" rows="3" class="form-control" placeholder="Notes ou commentaires..."></textarea>
                    <span asp-validation-for="Observations" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-modern">
                    <i class="bi bi-check-circle me-1"></i>Enregistrer
                </button>
                <a asp-area="Admin" asp-controller="Nominations" asp-action="Index" class="btn btn-outline-secondary btn-modern">
                    <i class="bi bi-arrow-left me-1"></i>Retour
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
