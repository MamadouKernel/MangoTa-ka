@model MangoTaikaDistrict.Domain.Entities.Groupe
@{
    ViewData["Title"] = "Modifier un Groupe";
}

<div class="mb-4">
    <h2 class="fw-bold mb-1"><i class="bi bi-pencil-square me-2 text-success"></i>Modifier un Groupe</h2>
    <p class="text-muted">Mettre à jour les informations du groupe</p>
</div>

<div class="card-modern card">
    <div class="card-body">
        <form method="post" class="form-modern">
            <input type="hidden" asp-for="Id" />
            
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Nom" class="form-label fw-semibold">
                        <i class="bi bi-building me-1"></i>Nom du Groupe *
                    </label>
                    <input asp-for="Nom" class="form-control" required />
                    <span asp-validation-for="Nom" class="text-danger"></span>
                </div>
                
                <div class="col-md-12">
                    <label asp-for="Adresse" class="form-label fw-semibold">
                        <i class="bi bi-geo-alt me-1"></i>Adresse complète (format: rue K84; cocody, 2 plateaux, carrefour celeste)
                    </label>
                    <textarea asp-for="Adresse" class="form-control" rows="3" placeholder="Ex: rue K84; cocody, 2 plateaux, carrefour celeste"></textarea>
                    <small class="form-text text-muted">Utilisez le point-virgule (;) pour séparer les différentes parties de l'adresse</small>
                    <span asp-validation-for="Adresse" class="text-danger"></span>
                </div>
                
                <div class="col-md-12">
                    <label asp-for="LogoUrl" class="form-label fw-semibold">
                        <i class="bi bi-image me-1"></i>URL du Logo du Groupe
                    </label>
                    <input asp-for="LogoUrl" type="url" class="form-control" placeholder="https://exemple.com/logo.png" />
                    <small class="form-text text-muted">URL complète du logo du groupe (doit être conforme à la charte graphique - pas de rotation, pas de version contour)</small>
                    @if (!string.IsNullOrEmpty(Model.LogoUrl))
                    {
                        <div class="mt-2">
                            <img src="@Model.LogoUrl" alt="Logo actuel" style="max-width: 200px; max-height: 150px; border: 2px solid #ddd; border-radius: 8px; padding: 5px;" />
                        </div>
                    }
                    <span asp-validation-for="LogoUrl" class="text-danger"></span>
                </div>
                
                <div class="col-md-6">
                    <label asp-for="ContactTel" class="form-label fw-semibold">
                        <i class="bi bi-telephone me-1"></i>Téléphone
                    </label>
                    <input asp-for="ContactTel" class="form-control" />
                    <span asp-validation-for="ContactTel" class="text-danger"></span>
                </div>
                
                <div class="col-md-6">
                    <label asp-for="ContactEmail" class="form-label fw-semibold">
                        <i class="bi bi-envelope me-1"></i>Email
                    </label>
                    <input asp-for="ContactEmail" type="email" class="form-control" />
                    <span asp-validation-for="ContactEmail" class="text-danger"></span>
                </div>
                
                <div class="col-md-6">
                    <label asp-for="GpsLat" class="form-label fw-semibold">
                        <i class="bi bi-geo me-1"></i>Latitude GPS
                    </label>
                    <input asp-for="GpsLat" type="number" step="0.000001" class="form-control" />
                    <span asp-validation-for="GpsLat" class="text-danger"></span>
                </div>
                
                <div class="col-md-6">
                    <label asp-for="GpsLng" class="form-label fw-semibold">
                        <i class="bi bi-geo me-1"></i>Longitude GPS
                    </label>
                    <input asp-for="GpsLng" type="number" step="0.000001" class="form-control" />
                    <span asp-validation-for="GpsLng" class="text-danger"></span>
                </div>
                
                <div class="col-md-6">
                    <div class="form-check form-switch mt-4">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label fw-semibold">
                            <i class="bi bi-toggle-on me-1"></i>Groupe actif
                        </label>
                    </div>
                </div>
            </div>
            
            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-modern">
                    <i class="bi bi-check-circle me-1"></i>Sauvegarder
                </button>
                <a asp-area="Admin" asp-controller="Groupes" asp-action="Index" class="btn btn-outline-secondary btn-modern">
                    <i class="bi bi-arrow-left me-1"></i>Retour
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
