@model MangoTaikaDistrict.Domain.Entities.Groupe
@{
    ViewData["Title"] = "Supprimer groupe";
}
<h2>Supprimer</h2>
<p>Confirmer suppression du groupe: <b>@Model.Nom</b> ?</p>

<form method="post" asp-action="DeleteConfirmed">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit">Oui, supprimer</button>
</form>

<p><a asp-area="Admin" asp-controller="Groupes" asp-action="Index">Annuler</a></p>
