@model List<MangoTaikaDistrict.Domain.Entities.Groupe>
@{
    ViewData["Title"] = "Groupes";
}
<h2>Groupes</h2>

<p><a asp-area="Admin" asp-controller="Groupes" asp-action="Create">+ Nouveau groupe</a></p>

<table border="1" cellpadding="6">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Téléphone</th>
            <th>Email</th>
            <th>Actif</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var g in Model)
        {
            <tr>
                <td>@g.Nom</td>
                <td>@g.ContactTel</td>
                <td>@g.ContactEmail</td>
                <td>@g.IsActive</td>
                <td>
                    <a asp-area="Admin" asp-controller="Groupes" asp-action="Edit" asp-route-id="@g.Id">Modifier</a> |
                    <a asp-area="Admin" asp-controller="Groupes" asp-action="Delete" asp-route-id="@g.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
