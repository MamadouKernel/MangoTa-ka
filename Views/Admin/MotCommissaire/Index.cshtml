@model List<MangoTaikaDistrict.Domain.Entities.MotCommissaire>
@{
    ViewData["Title"] = "Gestion des Mots du Commissaire";
}

<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="fw-bold mb-2"><i class="bi bi-file-text me-2"></i>Mots du Commissaire</h2>
            <p class="text-muted">Gérer les messages annuels du commissaire de district</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-modern">
            <i class="bi bi-plus-circle me-1"></i>Nouveau Mot
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card-modern card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-modern">
                    <thead>
                        <tr>
                            <th>Année</th>
                            <th>Titre</th>
                            <th>Photo</th>
                            <th>Période</th>
                            <th>Statut</th>
                            <th>Créé le</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var mot in Model)
                        {
                            <tr>
                                <td><span class="badge bg-info">@mot.Annee</span></td>
                                <td><strong>@mot.Titre</strong></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(mot.PhotoUrl))
                                    {
                                        <img src="@mot.PhotoUrl" alt="Photo" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">Aucune photo</span>
                                    }
                                </td>
                                <td>
                                    <small>@mot.DateDebut.ToString("dd/MM/yyyy") - @mot.DateFin.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td>
                                    @if (mot.IsActive)
                                    {
                                        <span class="badge bg-success">Actif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactif</span>
                                    }
                                </td>
                                <td><small>@mot.CreatedAt.ToString("dd/MM/yyyy")</small></td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@mot.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-file-text text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">Aucun mot du commissaire n'a été créé.</p>
                <a asp-action="Create" class="btn btn-primary btn-modern">
                    <i class="bi bi-plus-circle me-1"></i>Créer le premier mot
                </a>
            </div>
        }
    </div>
</div>
