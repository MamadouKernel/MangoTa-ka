@{
    ViewData["Title"] = "Importer des Scouts";
}

<div class="mb-4">
    <h2 class="fw-bold mb-1"><i class="bi bi-file-earmark-excel me-2 text-success"></i>Importer des Scouts</h2>
    <p class="text-muted">Importez vos données depuis un fichier Excel</p>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i><strong>Erreur:</strong> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i><strong>Avertissement:</strong> @TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i><strong>Succès:</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorDetails"] != null)
{
    <div class="alert alert-info">
        <h6 class="alert-heading"><i class="bi bi-info-circle me-2"></i>Détails des erreurs:</h6>
        <pre class="mb-0" style="white-space:pre-wrap;max-height:200px;overflow-y:auto;">@TempData["ErrorDetails"]</pre>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <div class="card-modern card">
            <div class="card-body">
                <h5 class="card-title mb-4"><i class="bi bi-upload me-2"></i>Upload du fichier</h5>
                <form method="post" enctype="multipart/form-data">
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-file-earmark-excel me-1"></i>Sélectionner un fichier Excel (.xlsx ou .xls)
                        </label>
                        <input type="file" name="file" accept=".xlsx,.xls" required 
                               class="form-control form-modern" />
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary btn-modern">
                            <i class="bi bi-upload me-1"></i>Importer
                        </button>
                        <a asp-area="Admin" asp-controller="Scouts" asp-action="Index" class="btn btn-outline-secondary btn-modern">
                            <i class="bi bi-arrow-left me-1"></i>Retour
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card-modern card">
            <div class="card-body">
                <h5 class="card-title mb-3"><i class="bi bi-info-circle me-2"></i>Format attendu</h5>
                <p class="fw-semibold mb-2">Colonnes requises :</p>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle text-success me-2"></i><strong>Nom</strong> (obligatoire)</li>
                    <li><i class="bi bi-check-circle text-success me-2"></i><strong>Prénoms</strong> (obligatoire)</li>
                    <li><i class="bi bi-check-circle text-success me-2"></i><strong>Groupe</strong> (obligatoire)</li>
                    <li><i class="bi bi-dash-circle text-muted me-2"></i><strong>Matricule</strong> (optionnel)</li>
                    <li><i class="bi bi-dash-circle text-muted me-2"></i><strong>Sexe</strong> (optionnel)</li>
                    <li><i class="bi bi-dash-circle text-muted me-2"></i><strong>Date de naissance</strong> (optionnel)</li>
                    <li><i class="bi bi-dash-circle text-muted me-2"></i><strong>Statut</strong> (optionnel, défaut: "Actif")</li>
                </ul>
                <div class="alert alert-light mt-3">
                    <small><i class="bi bi-lightbulb me-1"></i>La première ligne doit contenir les en-têtes. Le groupe doit exister dans la base de données.</small>
                </div>
            </div>
        </div>
    </div>
</div>
