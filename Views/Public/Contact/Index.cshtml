@model MangoTaikaDistrict.Models.Public.ContactVm
@{
    ViewData["Title"] = "Contactez-nous";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card-modern card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="bi bi-envelope me-2"></i>Contactez-nous</h2>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Warning"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Warning"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <p class="text-muted mb-4">
                        Nous serions ravis de recevoir vos messages. Remplissez le formulaire ci-dessous et nous vous répondrons dans les plus brefs délais.
                    </p>

                    <form method="post" class="form-modern">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Nom" class="form-label fw-semibold">
                                    <i class="bi bi-person me-1"></i>Nom complet *
                                </label>
                                <input asp-for="Nom" class="form-control" placeholder="Votre nom" />
                                <span asp-validation-for="Nom" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-semibold">
                                    <i class="bi bi-envelope me-1"></i>Email *
                                </label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="votre@email.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Telephone" class="form-label fw-semibold">
                                    <i class="bi bi-telephone me-1"></i>Téléphone
                                </label>
                                <input asp-for="Telephone" class="form-control" placeholder="+225 XX XX XX XX XX" />
                                <span asp-validation-for="Telephone" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Message" class="form-label fw-semibold">
                                    <i class="bi bi-chat-left-text me-1"></i>Message *
                                </label>
                                <textarea asp-for="Message" class="form-control" rows="5" placeholder="Votre message..."></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <div class="form-check">
                                    <input asp-for="Consentement" class="form-check-input" type="checkbox" />
                                    <label asp-for="Consentement" class="form-check-label">
                                        J'accepte que mes données personnelles soient utilisées pour traiter ma demande conformément à la réglementation en vigueur (Loi ivoirienne sur la protection des données personnelles) *
                                    </label>
                                    <span asp-validation-for="Consentement" class="text-danger d-block"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-modern">
                                <i class="bi bi-send me-1"></i>Envoyer le message
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-modern">
                                <i class="bi bi-arrow-left me-1"></i>Retour à l'accueil
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
