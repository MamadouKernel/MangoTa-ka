@model List<MangoTaikaDistrict.Domain.Entities.Groupe>
@{
    ViewData["Title"] = "Groupes";
}

<!-- Hero Section Futuriste -->
<section class="groups-hero-section position-relative overflow-hidden">
    <div class="hero-animated-bg"></div>
    <div class="hero-particles"></div>
    <div class="container position-relative" style="z-index: 10; padding: 120px 0 80px;">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center text-white">
                <div class="hero-icon-wrapper mb-4">
                    <div class="icon-glow"></div>
                    <i class="bi bi-people-fill hero-main-icon"></i>
                </div>
                <h1 class="display-3 fw-bold mb-4 hero-title">
                    Nos Groupes
                </h1>
                <p class="lead fs-4 mb-0 hero-subtitle">
                    Découvrez le réseau de groupes qui compose le district <span class="text-highlight">MANGO TAÏKA</span>
                </p>
            </div>
        </div>
    </div>
    <div class="hero-wave-bottom">
        <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 120L60 105C120 90 240 60 360 45C480 30 600 30 720 37.5C840 45 960 60 1080 67.5C1200 75 1320 75 1380 75L1440 75V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" fill="white"/>
        </svg>
    </div>
</section>

<!-- Liste des Groupes avec Design Futuriste -->
<div class="groups-container py-5 position-relative">
    <div class="container">
        @if (Model != null && Model.Any())
        {
            <div class="row g-4 mb-5">
                @foreach (var groupe in Model.Where(g => g.IsActive))
                {
                    <div class="col-lg-4 col-md-6 groupe-card-wrapper" data-aos="fade-up" data-aos-delay="@(Model.IndexOf(groupe) * 100)">
                        <div class="groupe-card-futuriste h-100">
                            <!-- Header avec Logo -->
                            <div class="groupe-card-header">
                                @if (!string.IsNullOrEmpty(groupe.LogoUrl))
                                {
                                    <div class="logo-container">
                                        <div class="logo-glow"></div>
                                        <img src="@groupe.LogoUrl" alt="Logo @groupe.Nom" class="groupe-logo-img" />
                                    </div>
                                }
                                else
                                {
                                    <div class="logo-placeholder">
                                        <div class="placeholder-icon">
                                            <i class="bi bi-people-fill"></i>
                                        </div>
                                    </div>
                                }
                                <div class="header-accent"></div>
                            </div>
                            
                            <!-- Body -->
                            <div class="groupe-card-body">
                                <h3 class="groupe-name">@groupe.Nom</h3>
                                
                                @if (!string.IsNullOrEmpty(groupe.Adresse))
                                {
                                    <div class="info-section location-section">
                                        <div class="info-icon">
                                            <i class="bi bi-geo-alt-fill"></i>
                                        </div>
                                        <div class="info-content">
                                            <span class="info-label">Localisation</span>
                                            <p class="info-value">@Html.Raw(groupe.Adresse.Replace(";", "<br/>"))</p>
                                        </div>
                                    </div>
                                }
                                
                                <div class="contact-info">
                                    @if (!string.IsNullOrEmpty(groupe.ContactTel))
                                    {
                                        <div class="contact-item">
                                            <i class="bi bi-telephone-fill"></i>
                                            <a href="tel:@groupe.ContactTel" class="contact-link">@groupe.ContactTel</a>
                                        </div>
                                    }
                                    
                                    @if (!string.IsNullOrEmpty(groupe.ContactEmail))
                                    {
                                        <div class="contact-item">
                                            <i class="bi bi-envelope-fill"></i>
                                            <a href="mailto:@groupe.ContactEmail" class="contact-link">@groupe.ContactEmail</a>
                                        </div>
                                    }
                                </div>
                                
                                <div class="card-actions">
                                    @if (groupe.GpsLat.HasValue && groupe.GpsLng.HasValue)
                                    {
                                        <a href="https://www.google.com/maps?q=@groupe.GpsLat,@groupe.GpsLng" 
                                           target="_blank" 
                                           class="btn-futuriste btn-primary-futuriste">
                                            <i class="bi bi-geo-alt me-2"></i>Voir sur la carte
                                        </a>
                                    }
                                    @if (!string.IsNullOrEmpty(groupe.Adresse))
                                    {
                                        <a href="https://www.google.com/maps/search/@Uri.EscapeDataString(groupe.Adresse)" 
                                           target="_blank" 
                                           class="btn-futuriste btn-secondary-futuriste">
                                            <i class="bi bi-search me-2"></i>Rechercher
                                        </a>
                                    }
                                </div>
                            </div>
                            
                            <!-- Footer Accent -->
                            <div class="card-footer-accent"></div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state-futuriste text-center py-5">
                <div class="empty-icon-wrapper">
                    <i class="bi bi-inbox"></i>
                </div>
                <h3 class="empty-title">Aucun groupe disponible</h3>
                <p class="empty-text">Les groupes seront bientôt disponibles.</p>
            </div>
        }
    </div>
</div>

<!-- Carte Interactive Futuriste -->
@if (Model != null && Model.Any(g => g.GpsLat.HasValue && g.GpsLng.HasValue))
{
    <div class="map-section-futuriste py-5">
        <div class="container">
            <div class="map-card-futuriste">
                <div class="map-header">
                    <h3 class="map-title">
                        <i class="bi bi-map me-2"></i>Carte Interactive
                    </h3>
                </div>
                <div class="map-container">
                    <div id="map" class="map-wrapper"></div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Leaflet CSS & JS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
    @if (Model != null && Model.Any(g => g.GpsLat.HasValue && g.GpsLng.HasValue))
    {
        <text>
        const map = L.map('map').setView([5.345, -4.024], 11);
        
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);
        
        const groups = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
            Model.Where(x => x.GpsLat.HasValue && x.GpsLng.HasValue && x.IsActive)
                 .Select(x => new { 
                     x.Nom, 
                     x.Adresse,
                     lat = x.GpsLat, 
                     lng = x.GpsLng, 
                     x.ContactTel,
                     x.ContactEmail,
                     x.LogoUrl
                 })
        ));
        
        groups.forEach(g => {
            const popupContent = `
                <div style="min-width: 200px; text-align: center;">
                    ${g.LogoUrl ? `<img src="${g.LogoUrl}" alt="${g.Nom}" style="max-width: 100px; max-height: 80px; margin: 0 auto 10px; display: block; object-fit: contain;" />` : ''}
                    <h5 style="color: #2D5016; font-weight: bold; margin-bottom: 10px;">${g.Nom}</h5>
                    ${g.Adresse ? `<p style="margin-bottom: 8px; font-size: 0.9rem;"><i class="bi bi-geo-alt"></i> ${g.Adresse.replace(/;/g, ', ')}</p>` : ''}
                    ${g.ContactTel ? `<p style="margin-bottom: 8px;"><i class="bi bi-telephone"></i> <a href="tel:${g.ContactTel}" style="color: #2D5016; text-decoration: none;">${g.ContactTel}</a></p>` : ''}
                    ${g.ContactEmail ? `<p style="margin-bottom: 0;"><i class="bi bi-envelope"></i> <a href="mailto:${g.ContactEmail}" style="color: #2D5016; text-decoration: none;">${g.ContactEmail}</a></p>` : ''}
                </div>
            `;
            
            const greenIcon = L.icon({
                iconUrl: 'data:image/svg+xml;base64,' + btoa(`
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 40 40">
                        <defs>
                            <filter id="glow">
                                <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
                                <feMerge>
                                    <feMergeNode in="coloredBlur"/>
                                    <feMergeNode in="SourceGraphic"/>
                                </feMerge>
                            </filter>
                        </defs>
                        <circle cx="20" cy="20" r="15" fill="#2D5016" stroke="#6BA644" stroke-width="3" filter="url(#glow)"/>
                        <circle cx="20" cy="20" r="8" fill="white"/>
                    </svg>
                `),
                iconSize: [40, 40],
                iconAnchor: [20, 40],
                popupAnchor: [0, -40]
            });
            
            L.marker([g.lat, g.lng], { icon: greenIcon }).addTo(map).bindPopup(popupContent);
        });
        </text>
    }
</script>

<style>
    /* ============================================
       HERO SECTION FUTURISTE
       ============================================ */
    .groups-hero-section {
        background: linear-gradient(135deg, #2D5016 0%, #4A7C2A 40%, #6BA644 100%);
        min-height: 500px;
        position: relative;
        overflow: hidden;
    }
    
    .hero-animated-bg {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 30%, rgba(107, 166, 68, 0.4) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(143, 203, 107, 0.3) 0%, transparent 50%),
            radial-gradient(circle at 50% 50%, rgba(45, 80, 22, 0.2) 0%, transparent 70%);
        animation: backgroundPulse 8s ease-in-out infinite;
    }
    
    @@keyframes backgroundPulse {
        0%, 100% { transform: scale(1) rotate(0deg); opacity: 1; }
        50% { transform: scale(1.1) rotate(2deg); opacity: 0.8; }
    }
    
    .hero-particles {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
            radial-gradient(2px 2px at 20px 30px, rgba(255, 255, 255, 0.3), transparent),
            radial-gradient(2px 2px at 60px 70px, rgba(255, 255, 255, 0.2), transparent),
            radial-gradient(1px 1px at 50px 50px, rgba(255, 255, 255, 0.4), transparent);
        background-size: 200px 200px;
        animation: particlesFloat 20s linear infinite;
    }
    
    @@keyframes particlesFloat {
        0% { transform: translateY(0) translateX(0); }
        100% { transform: translateY(-200px) translateX(-100px); }
    }
    
    .hero-icon-wrapper {
        position: relative;
        display: inline-block;
        margin-bottom: 2rem;
    }
    
    .icon-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 120px;
        height: 120px;
        background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
        border-radius: 50%;
        animation: iconGlow 3s ease-in-out infinite;
    }
    
    @@keyframes iconGlow {
        0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.5; }
        50% { transform: translate(-50%, -50%) scale(1.3); opacity: 0.8; }
    }
    
    .hero-main-icon {
        position: relative;
        font-size: 5rem;
        color: white;
        text-shadow: 0 0 30px rgba(255, 255, 255, 0.8);
        animation: iconFloat 4s ease-in-out infinite;
    }
    
    @@keyframes iconFloat {
        0%, 100% { transform: translateY(0) scale(1); }
        50% { transform: translateY(-10px) scale(1.05); }
    }
    
    .hero-title {
        font-size: 4rem;
        font-weight: 800;
        letter-spacing: 2px;
        text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        animation: titleSlideIn 1s ease-out;
    }
    
    @@keyframes titleSlideIn {
        from { opacity: 0; transform: translateY(-30px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .hero-subtitle {
        animation: subtitleFadeIn 1.2s ease-out;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }
    
    @@keyframes subtitleFadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    
    .text-highlight {
        background: linear-gradient(120deg, #B8E09A 0%, white 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 700;
    }
    
    .hero-wave-bottom {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 120px;
        z-index: 5;
    }
    
    /* ============================================
       CARDS FUTURISTES
       ============================================ */
    .groups-container {
        background: linear-gradient(to bottom, #f8f9fa 0%, #ffffff 100%);
    }
    
    .groupe-card-wrapper {
        margin-bottom: 2rem;
    }
    
    .groupe-card-futuriste {
        background: rgba(255, 255, 255, 0.98);
        border-radius: 24px;
        overflow: hidden;
        position: relative;
        box-shadow: 
            0 10px 40px rgba(45, 80, 22, 0.1),
            0 0 0 1px rgba(45, 80, 22, 0.05);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        backdrop-filter: blur(10px);
    }
    
    .groupe-card-futuriste::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(107, 166, 68, 0.1), transparent);
        transition: left 0.6s;
    }
    
    .groupe-card-futuriste:hover::before {
        left: 100%;
    }
    
    .groupe-card-futuriste:hover {
        transform: translateY(-12px) scale(1.02);
        box-shadow: 
            0 20px 60px rgba(45, 80, 22, 0.2),
            0 0 0 1px rgba(107, 166, 68, 0.3),
            0 0 40px rgba(107, 166, 68, 0.15);
    }
    
    .groupe-card-header {
        position: relative;
        background: linear-gradient(135deg, rgba(45, 80, 22, 0.05) 0%, rgba(107, 166, 68, 0.08) 100%);
        padding: 2.5rem 1.5rem;
        text-align: center;
        border-bottom: 2px solid rgba(45, 80, 22, 0.1);
    }
    
    .logo-container {
        position: relative;
        display: inline-block;
    }
    
    .logo-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        height: 100%;
        background: radial-gradient(circle, rgba(107, 166, 68, 0.3) 0%, transparent 70%);
        border-radius: 50%;
        animation: logoGlow 3s ease-in-out infinite;
    }
    
    @@keyframes logoGlow {
        0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.3; }
        50% { transform: translate(-50%, -50%) scale(1.2); opacity: 0.6; }
    }
    
