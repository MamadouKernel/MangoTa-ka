        background: rgba(255, 255, 255, 0.98);
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 15px 50px rgba(45, 80, 22, 0.15);
        backdrop-filter: blur(10px);
    }
    
    .map-header {
        padding: 2rem;
        background: linear-gradient(135deg, rgba(45, 80, 22, 0.05) 0%, rgba(107, 166, 68, 0.08) 100%);
        border-bottom: 2px solid rgba(45, 80, 22, 0.1);
    }
    
    .map-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #2D5016;
        margin: 0;
    }
    
    .map-title i {
        color: #6BA644;
    }
    
    .map-container {
        padding: 0;
    }
    
    .map-wrapper {
        height: 600px;
        width: 100%;
        border-radius: 0;
    }
    
    .leaflet-popup-content-wrapper {
