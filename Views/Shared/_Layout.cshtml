<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MangoTaikaDistrict</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modern-components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/scout-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/MangoTaikaDistrict.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light shadow-sm modern-navbar natural-pattern">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Mango Taika District" class="logo-nav me-3" />
                    <span class="brand-text d-none d-md-inline">MangoTaikaDistrict</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://adhesion.scoutascci.org/" target="_blank">
                                <i class="bi bi-link-45deg me-1"></i>Adhésion ASCCI (SYGESCA)
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person me-1"></i>Mon compte
                                </a>
                                <ul class="dropdown-menu">
                        @if (User.IsInRole("SCOUT"))
                        {
                            <li><a class="dropdown-item" asp-controller="MyProfile" asp-action="Index">
                                <i class="bi bi-person-circle me-1"></i>Mon profil
                            </a></li>
                            <li><a class="dropdown-item" asp-controller="MesFormations" asp-action="Index">
                                <i class="bi bi-book me-1"></i>Mes formations
                            </a></li>
                        }
                        @if (User.IsInRole("PARENT"))
                        {
                            <li><a class="dropdown-item" asp-controller="Parent" asp-action="MesEnfants">
                                <i class="bi bi-people me-1"></i>Mes enfants
                            </a></li>
                        }
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-controller="Formations" asp-action="Index">
                            <i class="bi bi-book-half me-1"></i>Formations (LMS)
                        </a></li>
                        <li><a class="dropdown-item" asp-controller="MyData" asp-action="Index">
                            <i class="bi bi-shield-check me-1"></i>Mes données (RGPD)
                        </a></li>
                                </ul>
                            </li>
                            @if (User.IsInRole("ADMIN") || User.IsInRole("GESTIONNAIRE"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                        <i class="bi bi-speedometer2 me-1"></i>Administration
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Connexion
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i>S'inscrire
                                </a>
                            </li>
                        }
                    </ul>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link border-0 text-primary">
                                        <i class="bi bi-box-arrow-right me-1"></i>Déconnexion
                                    </button>
                                </form>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid py-5 px-4">
        <main role="main" class="fade-in">
            @RenderBody()
        </main>
    </div>

    <footer class="modern-footer mt-5 py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-4">
                        <img src="~/images/logo.png" alt="Logo" class="logo-footer me-3" />
                        <h4 class="mb-0 text-white fw-bold">MangoTaikaDistrict</h4>
                    </div>
                    <p class="text-white-50 mb-0 lh-lg">Plateforme numérique du 22ème siècle pour la gestion du district scout</p>
                </div>
                <div class="col-md-4">
                    <h5 class="text-white mb-4 fw-bold"><i class="bi bi-link-45deg me-2"></i>Liens rapides</h5>
                    <ul class="list-unstyled footer-links">
                        <li class="mb-3"><a href="/" class="footer-link">
                            <i class="bi bi-house me-2"></i>Accueil
                        </a></li>
                        <li class="mb-3"><a href="/Groups" class="footer-link">
                            <i class="bi bi-people me-2"></i>Groupes
                        </a></li>
                        <li class="mb-3"><a href="/Gallery" class="footer-link">
                            <i class="bi bi-images me-2"></i>Galerie
                        </a></li>
                        <li class="mb-3"><a href="/News" class="footer-link">
                            <i class="bi bi-newspaper me-2"></i>Actualités
                        </a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="text-white mb-4 fw-bold"><i class="bi bi-envelope me-2"></i>Contact</h5>
                    <ul class="list-unstyled footer-links">
                        <li class="mb-3">
                            <a href="mailto:contact@mangotaika.ci" class="footer-link">
                                <i class="bi bi-envelope me-2"></i>contact@mangotaika.ci
                            </a>
                        </li>
                        <li class="mb-3">
                            <a href="tel:+225XXXXXXXX" class="footer-link">
                                <i class="bi bi-telephone me-2"></i>+225 XX XX XX XX
                            </a>
                        </li>
                        <li class="mb-3">
                            <a href="https://adhesion.scoutascci.org/" target="_blank" class="footer-link">
                                <i class="bi bi-link-45deg me-2"></i>ASCCI SYGESCA
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <hr class="my-4" style="border-color: rgba(255,255,255,0.1);" />
            <div class="row">
                <div class="col-12 text-center">
                    <p class="text-muted mb-0">&copy; 2026 - MangoTaikaDistrict. Tous droits réservés.</p>
                </div>
            </div>
        </div>
    </footer>
    <style>
        .modern-footer {
            background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-text-dark) 100%);
            color: white;
        }
        
        .modern-footer a:hover {
            color: white !important;
            transition: color 0.3s ease;
        }
        
        .logo-footer {
            filter: brightness(0) invert(1);
            height: 70px !important;
            width: auto;
            transition: transform 0.3s ease;
        }
        
        .logo-footer:hover {
            transform: scale(1.05);
        }
        
        .logo-nav {
            height: 80px !important;
            width: auto;
            max-width: 300px;
            transition: transform 0.3s ease;
            filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.2));
        }
        
        .logo-nav:hover {
            transform: scale(1.05);
        }
        
        .brand-text {
            font-size: 1.5rem;
            font-weight: 700;
            color: white !important;
            letter-spacing: 0.5px;
        }
        
        .footer-links {
            padding-left: 0;
        }
        
        .footer-link {
            color: rgba(255, 255, 255, 0.85) !important;
            text-decoration: none;
            font-size: 1rem;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 0;
            transition: all 0.3s ease;
            border-bottom: 2px solid transparent;
        }
        
        .footer-link:hover {
            color: white !important;
            transform: translateX(8px);
            border-bottom-color: rgba(255, 255, 255, 0.3);
        }
        
        .footer-link i {
            font-size: 1.1rem;
            transition: transform 0.3s ease;
        }
        
        .footer-link:hover i {
            transform: scale(1.2);
        }
        
        .text-white-50 {
            color: rgba(255, 255, 255, 0.7) !important;
        }
        
        /* Override Bootstrap avec couleurs du logo (VERT & BLANC) */
        .bg-primary {
            background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-medium) 100%) !important;
        }
        
        .text-primary {
            color: var(--color-primary) !important;
        }
        
        .border-primary {
            border-color: var(--color-primary) !important;
        }
        
        .bg-success {
            background: linear-gradient(135deg, var(--color-primary-light) 0%, var(--color-primary-lighter) 100%) !important;
        }
        
        .text-success {
            color: var(--color-primary-light) !important;
        }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
