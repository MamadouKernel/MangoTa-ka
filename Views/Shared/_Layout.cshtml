<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MANGO TAÏKA</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modern-components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/scout-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer-modern.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/futuristic-design.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive-complete.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/MangoTaikaDistrict.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light shadow-sm modern-navbar natural-pattern">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="MANGO TAÏKA" class="logo-nav me-3" />
                    <span class="brand-text d-none d-md-inline">MANGO TAÏKA</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Groups" asp-action="Index">
                                <i class="bi bi-people me-1"></i>Groupes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Gallery" asp-action="Index">
                                <i class="bi bi-images me-1"></i>Galerie
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="News" asp-action="Index">
                                <i class="bi bi-newspaper me-1"></i>Actualités
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://adhesion.scoutascci.org/" target="_blank">
                                <i class="bi bi-link-45deg me-1"></i>Adhésion ASCCI (SYGESCA)
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person me-1"></i>Mon compte
                                </a>
                                <ul class="dropdown-menu">
                        @if (User.IsInRole("SCOUT"))
                        {
                            <li><a class="dropdown-item" asp-controller="MyProfile" asp-action="Index">
                                <i class="bi bi-person-circle me-1"></i>Mon profil
                            </a></li>
                            <li><a class="dropdown-item" asp-controller="MesFormations" asp-action="Index">
                                <i class="bi bi-book me-1"></i>Mes formations
                            </a></li>
                        }
                        @if (User.IsInRole("PARENT"))
                        {
                            <li><a class="dropdown-item" asp-controller="Parent" asp-action="MesEnfants">
                                <i class="bi bi-people me-1"></i>Mes enfants
                            </a></li>
                        }
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-controller="Formations" asp-action="Index">
                            <i class="bi bi-book-half me-1"></i>Formations (LMS)
                        </a></li>
                        <li><a class="dropdown-item" asp-controller="MyData" asp-action="Index">
                            <i class="bi bi-shield-check me-1"></i>Mes données (RGPD)
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline w-100">
                                <button type="submit" class="dropdown-item text-danger" style="border: none; background: none; width: 100%; text-align: left; padding: 0.5rem 1rem; cursor: pointer;">
                                    <i class="bi bi-box-arrow-right me-1"></i>Déconnexion
                                </button>
                            </form>
                        </li>
                                </ul>
                            </li>
                            @if (User.IsInRole("ADMIN") || User.IsInRole("GESTIONNAIRE"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                        <i class="bi bi-speedometer2 me-1"></i>Administration
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Connexion
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i>S'inscrire
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="fade-in">
        @RenderBody()
    </main>

    <footer class="footer-modern-scout">
        <!-- Wave separator -->
        <div class="footer-wave">
            <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0 0L60 15C120 30 240 60 360 75C480 90 600 90 720 82.5C840 75 960 60 1080 52.5C1200 45 1320 45 1380 45L1440 45V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" fill="var(--color-primary)"/>
            </svg>
        </div>
        
        <div class="footer-content">
            <div class="container">
                <div class="row g-5 mb-4">
                    <!-- Logo & Description -->
                    <div class="col-lg-4 col-md-6">
                        <div class="footer-brand mb-4">
                            <div class="footer-logo-container mb-3">
                                <img src="~/images/logo.png" alt="MANGO TAÏKA" class="footer-logo" />
                            </div>
                            <h3 class="footer-brand-title">MANGO TAÏKA</h3>
                            <p class="footer-description">
                                Plateforme numérique du 22ème siècle pour la gestion et le développement du scoutisme dans notre district.
                            </p>
                            <div class="footer-social mt-4">
                                <a href="https://adhesion.scoutascci.org/" target="_blank" class="social-link" title="ASCCI SYGESCA">
                                    <i class="bi bi-link-45deg"></i>
                                </a>
                                <a href="mailto:contact@mangotaika.ci" class="social-link" title="Email">
                                    <i class="bi bi-envelope"></i>
                                </a>
                                <a href="tel:+225XXXXXXXX" class="social-link" title="Téléphone">
                                    <i class="bi bi-telephone"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Liens rapides -->
                    <div class="col-lg-2 col-md-6">
                        <h5 class="footer-section-title">
                            <i class="bi bi-compass me-2"></i>Navigation
                        </h5>
                        <ul class="footer-menu">
                            <li><a asp-controller="Home" asp-action="Index" class="footer-menu-link">
                                <i class="bi bi-house me-2"></i>Accueil
                            </a></li>
                            <li><a asp-controller="Groups" asp-action="Index" class="footer-menu-link">
                                <i class="bi bi-people me-2"></i>Groupes
                            </a></li>
                            <li><a asp-controller="Gallery" asp-action="Index" class="footer-menu-link">
                                <i class="bi bi-images me-2"></i>Galerie
                            </a></li>
                            <li><a asp-controller="News" asp-action="Index" class="footer-menu-link">
                                <i class="bi bi-newspaper me-2"></i>Actualités
                            </a></li>
                        </ul>
                    </div>
                    
                    <!-- Services -->
                    <div class="col-lg-3 col-md-6">
                        <h5 class="footer-section-title">
                            <i class="bi bi-tools me-2"></i>Services
                        </h5>
                        <ul class="footer-menu">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <li><a asp-controller="Formations" asp-action="Index" class="footer-menu-link">
                                    <i class="bi bi-book-half me-2"></i>Formations LMS
                                </a></li>
                                <li><a asp-controller="MyData" asp-action="Index" class="footer-menu-link">
                                    <i class="bi bi-shield-check me-2"></i>Mes données (RGPD)
                                </a></li>
                                @if (User.IsInRole("SCOUT"))
                                {
                                    <li><a asp-controller="MyProfile" asp-action="Index" class="footer-menu-link">
                                        <i class="bi bi-person-circle me-2"></i>Mon profil
                                    </a></li>
                                }
                                @if (User.IsInRole("PARENT"))
                                {
                                    <li><a asp-controller="Parent" asp-action="MesEnfants" class="footer-menu-link">
                                        <i class="bi bi-people me-2"></i>Mes enfants
                                    </a></li>
                                }
                            }
                            else
                            {
                                <li><a asp-controller="Account" asp-action="Login" class="footer-menu-link">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Connexion
                                </a></li>
                                <li><a asp-controller="Account" asp-action="Register" class="footer-menu-link">
                                    <i class="bi bi-person-plus me-2"></i>Inscription
                                </a></li>
                            }
                        </ul>
                    </div>
                    
                    <!-- Contact -->
                    <div class="col-lg-3 col-md-6">
                        <h5 class="footer-section-title">
                            <i class="bi bi-envelope-paper me-2"></i>Contact
                        </h5>
                        <ul class="footer-contact">
                            <li class="footer-contact-item">
                                <i class="bi bi-envelope"></i>
                                <div>
                                    <strong>Email</strong>
                                    <a href="mailto:contact@mangotaika.ci">contact@mangotaika.ci</a>
                                </div>
                            </li>
                            <li class="footer-contact-item">
                                <i class="bi bi-telephone"></i>
                                <div>
                                    <strong>Téléphone</strong>
                                    <a href="tel:+225XXXXXXXX">+225 XX XX XX XX</a>
                                </div>
                            </li>
                            <li class="footer-contact-item">
                                <i class="bi bi-link-45deg"></i>
                                <div>
                                    <strong>ASCCI</strong>
                                    <a href="https://adhesion.scoutascci.org/" target="_blank">SYGESCA</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <!-- Divider -->
                <div class="footer-divider"></div>
                
                <!-- Copyright -->
                <div class="footer-bottom">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <p class="footer-copyright mb-0">
                                &copy; @DateTime.Now.Year <strong>MANGO TAÏKA</strong>. Tous droits réservés.
                            </p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <p class="footer-made-with mb-0">
                                Fait avec <i class="bi bi-heart-fill text-danger"></i> pour le scoutisme
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <style>
        .modern-footer {
            background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-text-dark) 100%);
            color: white;
        }
        
        .modern-footer a:hover {
            color: white !important;
            transition: color 0.3s ease;
        }
        
        .logo-footer {
            filter: brightness(0) invert(1);
            height: 70px !important;
            width: auto;
            transition: transform 0.3s ease;
        }
        
        .logo-footer:hover {
            transform: scale(1.05);
        }
        
        .logo-nav {
            height: 80px !important;
            width: auto;
            max-width: 300px;
            transition: transform 0.3s ease;
            filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.2));
        }
        
        .logo-nav:hover {
            transform: scale(1.05);
        }
        
        .brand-text {
            font-size: 1.5rem;
            font-weight: 700;
            color: white !important;
            letter-spacing: 0.5px;
        }
        
        .footer-links {
            padding-left: 0;
        }
        
        .footer-link {
            color: rgba(255, 255, 255, 0.85) !important;
            text-decoration: none;
            font-size: 1rem;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 0;
            transition: all 0.3s ease;
            border-bottom: 2px solid transparent;
        }
        
        .footer-link:hover {
            color: white !important;
            transform: translateX(8px);
            border-bottom-color: rgba(255, 255, 255, 0.3);
        }
        
        .footer-link i {
            font-size: 1.1rem;
            transition: transform 0.3s ease;
        }
        
        .footer-link:hover i {
            transform: scale(1.2);
        }
        
        .text-white-50 {
            color: rgba(255, 255, 255, 0.7) !important;
        }
        
        /* Override Bootstrap avec couleurs du logo (VERT & BLANC) */
        .bg-primary {
            background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-medium) 100%) !important;
        }
        
        .text-primary {
            color: var(--color-primary) !important;
        }
        
        .border-primary {
            border-color: var(--color-primary) !important;
        }
        
        .bg-success {
            background: linear-gradient(135deg, var(--color-primary-light) 0%, var(--color-primary-lighter) 100%) !important;
        }
        
        .text-success {
            color: var(--color-primary-light) !important;
        }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
